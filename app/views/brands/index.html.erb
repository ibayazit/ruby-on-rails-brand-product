<div class="d-flex align-items-center justify-content-between">
  <h1>Brands</h1>
  <%= link_to 'New Brand', new_brand_path, class: 'btn btn-sm btn-primary' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Attached Products</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.product.count %></td>
        <td>
          <div class="d-flex align-items-center justify-content-end">
            <%= link_to 'Show', brand, class: 'badge bg-info text-white text-decoration-none me-2' %>
            <%= link_to 'Edit', edit_brand_path(brand), class: 'badge bg-warning text-dark text-decoration-none me-2' %>
            <%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }, class: 'badge bg-danger text-white text-decoration-none' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
