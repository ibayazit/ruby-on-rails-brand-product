<%= form_with(model: brand) do |form| %>
  <% if brand.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% brand.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field form-group">
    <span class="lead">
      <%= form.label :name %>
    </span>
    <%= form.text_field :name, class: 'form-control ' + (@brand.errors[:name].first ? 'is-invalid' : '') %>
  </div>

  <div class="actions pt-3 d-flex align-items-center justify-content-between">
    <%= link_to 'Back', brands_path, class: 'btn btn-link' %>
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
