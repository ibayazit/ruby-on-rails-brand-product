<div class="d-flex align-items-center justify-content-between">
  <h1>Products</h1>
  <%= link_to 'New Product', new_product_path, class: 'btn btn-sm btn-primary' %>
</div>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Barcode</th>
      <th>Description</th>
      <th>Price</th>
      <th>Brand</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.barcode %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.brand.name %></td>
        <td>
          <div class="d-flex align-items-center justify-content-end">
            <%= link_to 'Show', product, class: 'badge bg-info text-white text-decoration-none me-2' %>
            <%= link_to 'Edit', edit_product_path(product), class: 'badge bg-warning text-dark text-decoration-none me-2' %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'badge bg-danger text-white text-decoration-none' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
