<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card">
      <div class="card-body">
        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>
        
        <p>
          <strong>Barcode:</strong>
          <%= @product.barcode %>
        </p>
        
        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>
        
        <p>
          <strong>Price:</strong>
          <%= @product.price %>
        </p>
        
        <p>
          <strong>Brand:</strong>
          <%= @product.brand.name %>
        </p>
        <hr>
        <%= link_to 'Back', products_path, class: 'btn btn-link' %>
        <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-warning' %>
      </div>
    </div>
  </div>
</div>