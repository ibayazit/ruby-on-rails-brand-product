<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :barcode %>
    <%= form.text_field :barcode, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :brand_id %>
    <%= form.collection_select :brand_id, Brand.order(:name), :id, :name, {}, {:class => 'form-select'} %>
  </div>

  <div class="actions pt-3 d-flex align-items-center justify-content-between">
    <%= link_to 'Back', products_path, class: 'btn btn-link' %>
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
